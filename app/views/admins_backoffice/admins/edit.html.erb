<h1>Editando</h1>
<div class="bd-example">
  <%= form_with(model: [ :admins_backoffice, @admin ], local: true) do |form| %>
  
    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class: 'form-control', placeholder: "Seu e-mail" %>
    </div>
    <div class="form-group">
      <%= form.label :password %>
      <%= form.text_field :password, class: 'form-control', placeholder: 'Senha' %>
    </div>
    <div class="form-group">
      <%= form.label :password_confirmation %>
      <%= form.text_field :password_confirmation, class: 'form-control', placeholder: 'Senha' %>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
  <% end %>
</div>