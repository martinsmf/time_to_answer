<div class="row">
  <div class="col-lg-12">
    <h1 class ="page-header">Listando Administradores</h1>
  <div/>
<div/>

<div class="bd-example">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">E-mail</th>
        <th scope="col">
          <%= link_to new_admins_backoffice_admin_path, class: 'btn btn-success btn-circle' do %>
            <i class="fas fa-user-plus"></i>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
    <% @admins.each do |admin|%>
      <tr>
        <td scope="row"><%= admin.id %></td>
        <td><%= admin.email %></td>
        <td style="width: 200px">
          <%= link_to edit_admins_backoffice_admin_path(admin), class: 'btn btn-primary btn-circle' do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <a href="#" class="btn btn-danger btn-circle">
            <i class="fas fa-trash"></i>
          </a>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table> 
</div>