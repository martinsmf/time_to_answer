<div class="row">
  <div class="col-lg-12">
    <h1 class ="page-header"><%= t('messages.listing', model: @subjects.model_name.human(count: 2)) %></h1>
  <div/>
<div/>

<div class="bd-example">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col"><%= translate_attribute(@subjects, :description) %></th>
        <th scope="col">
          <div class="d-flex justify-content-center">
            <%= link_to new_admins_backoffice_subject_path, class: 'btn btn-success btn-circle' do %>
              <i class="fas fa-user-plus"></i>
            <% end %>
            <%= link_to admins_backoffice_subjects_path(format: :pdf), class: 'btn btn-danger btn-circle' do %>
              <i class="far fa-file-pdf"></i>
            <% end %>
          </div>
        </th>
      </tr>
    </thead>
    <tbody>
    <% @subjects.each do |subject|%>
      <tr>
        <td scope="row"><%= subject.id %></td>
        <td><%= subject.description %></td>
        <td style="width: 200px">
          <div class="d-flex justify-content-center">
            <%= link_to edit_admins_backoffice_subject_path(subject), class: 'btn btn-primary btn-circle' do %>
              <i class="fas fa-edit"></i>
            <% end %>
            <%= link_to admins_backoffice_subject_path(subject), method: :delete, class: "btn btn-danger btn-circle",
              data: { confirm: t('messages.confirm_with', item: subject.description.truncate(50)) }  do %>
              <i class="fas fa-trash"></i>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table> 
  <div class="d-flex justify-content-center">
    <%= paginate @subjects %>
  </div>
</div>

