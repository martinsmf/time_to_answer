<div class="row">
  <div class="col-lg-12">
    <h1 class ="page-header">Listando Assuntos/Área</h1>
  <div/>
<div/>

<div class="bd-example">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Descrição</th>
        <th scope="col">
          <div class="d-flex justify-content-center">
          <%= link_to new_admins_backoffice_subject_path, class: 'btn btn-success btn-circle' do %>
            <i class="fas fa-user-plus"></i>
          <% end %>
          </div>
        </th>
      </tr>
    </thead>
    <tbody>
    <% @subjects.each do |subject|%>
      <tr>
        <td scope="row"><%= subject.id %></td>
        <td><%= subject.description %></td>
        <td style="width: 200px">
          <div class="d-flex justify-content-center">
            <%= link_to edit_admins_backoffice_subject_path(subject), class: 'btn btn-primary btn-circle' do %>
              <i class="fas fa-edit"></i>
            <% end %>
            <%= link_to admins_backoffice_subject_path(subject), method: :delete, class: "btn btn-danger btn-circle",
              data: { confirm: 'Do you wish really delete this subject?'}  do %>
              <i class="fas fa-trash"></i>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table> 
  <div class="d-flex justify-content-center">
    <%= paginate @subjects %>
  </div>
</div>