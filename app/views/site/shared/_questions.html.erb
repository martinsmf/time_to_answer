<% @questions.each do |question| %>
  <div class="card">
    <div class="card-header">
      <%= question.description %>
    </div>
    <div class="card-body">
      <!-- <p class="card-text"></p> -->
      <ul>
        <% question.answers.each do |answer| %>
          <li class="card-text" >
            <%= answer.description %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <br>
<% end %>
<div class="d-flex justify-content-center">
    <%= paginate @questions %>
</div>