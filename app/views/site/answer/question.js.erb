let answer_button = document.getElementById('submit_<%= @question_id %>');

answer_button.classList.remove('btn-outline-dark');
answer_button.classList.remove('btn-success');
answer_button.classList.remove('btn-danger');

if (<%= @correct %>) {
  answer_button.classList.add('btn-success');
  $.bootstrapGrowl("You hit! \\o/", {
    ele: 'body', // which element to append to
    type: 'success', // (null, 'info', 'danger', 'success')
    offset: { from: 'top', amount: 10 }, // 'top', or 'bottom'
    align: 'right', // ('left', 'right', or 'center')
    width: 250, // (integer, or 'auto')
    delay: 4000, // Time while the message will be displayed. It's not equivalent to the *demo* timeOut!
    allow_dismiss: true, // If true then will display a cross to close the popup.
    stackup_spacing: 10 // spacing between consecutively stacked growls.
  });
} else {
  answer_button.classList.add('btn-danger');
  $.bootstrapGrowl("You missed! :(", {
    ele: 'body', // which element to append to
    type: 'danger', // (null, 'info', 'danger', 'success')
    offset: { from: 'top', amount: 10 }, // 'top', or 'bottom'
    align: 'right', // ('left', 'right', or 'center')
    width: 250, // (integer, or 'auto')
    delay: 4000, // Time while the message will be displayed. It's not equivalent to the *demo* timeOut!
    allow_dismiss: true, // If true then will display a cross to close the popup.
    stackup_spacing: 10 // spacing between consecutively stacked growls.
  });
}