<div>
  <a class="hiddenanchor" id="signin"></a>

  <div class="login_wrapper">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <h1>Login</h1>
          <div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",
             placeholder: t('text.placeholder_email', model: resource_class) %>
          </div>
          <div>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: t("text.placeholder_password") %>
          </div>
          <div>
              <%= f.submit "#{t('text.button_login')}", class:"btn btn-default submit",
                style:"float: none; margin-left:0px;" %>
              <%= link_to 'Lost your password?', new_user_password_path, class: "reset_pass" %>
          </div>

          <div class="clearfix"></div>

          <div class="separator">
            <div class="clearfix"></div>
            <br />

            <div>
              <h1><i class="fa fa-paw"></i> Time to Answer!</h1>
              <p>Â©2021 Matheus Martins</p>
            </div>
          </div>
        <% end %>
      </section>
  </div>
</div>


